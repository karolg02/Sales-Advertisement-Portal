generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ysa {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  image       String
  price       Decimal
  amount      Int      @default(1)
  category    String
  city        String
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  surename  String
  email     String   @unique
  password  String
  number    Int      @unique
  createdAt DateTime @default(now())
  offers    ysa[]
}
