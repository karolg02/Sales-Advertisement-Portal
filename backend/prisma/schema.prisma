generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ysa {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  image       String
  price       Decimal
  amount      Int      @default(1)
  category    String
  city        String
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  cart        Cart[] // tu tworze relacje z Cart i daje swoje id
  photos      Photos[]
}

model Photos {
  id    Int    @id @default(autoincrement())
  url   String
  ysa   ysa    @relation(fields: [ysaId], references: [id])
  ysaId Int
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  surename  String
  email     String   @unique
  password  String
  number    Int      @unique
  createdAt DateTime @default(now())
  offers    ysa[] // tu tworze relacje z ysa, w tym wypadku daje swoje id do oferty
  carts     Cart[] // tu tworze relacje z Cart
}

model Cart {
  id     Int  @id @default(autoincrement())
  User   User @relation(fields: [userId], references: [id])
  userId Int
  ysa    ysa  @relation(fields: [ysaId], references: [id])
  ysaId  Int
  amount Int  @default(1)
}
